.Release

  .Main
    overflow hidden

    @media (orientation landscape)
      position fixed
      height 100vh
      left 0
      top 0

      img
        height 100vh

    @media (orientation portrait)
      position relative
      height 200px
      left 0
      top 0

      img
        width 100%

    img
      position relative
      left 50%
      transform translateX(-50%)
      user-select none
      pointer-events none

  .Sidebar

    article
      padding 0

  h1
    font-size 72px
    line-height 1.2
    margin 0
    font-weight normal
    font-family 'ChunkFive', sans-serif
    padding 0 6%

    @media (orientation landscape)

      @media (max-width 1280px)
        font-size 54px

    @media (orientation portrait)
      margin-top 6%
      font-size 42px

  date
    display block
    font-family 'ChunkFive', sans-serif
    font-size 24px
    line-height 1.5
    opacity 0.75
    margin-bottom 36px
    padding 0 6%

  .tracklist
    list-style-type none
    font-size 13px
    line-height 18px
    margin 0
    padding 0
    counter-reset section

    li
      padding 8px 6%

      &:nth-child(2n)
        background-color rgba(white, 0.1)

        [data-theme="light"] &
          background-color rgba(black, 0.05)

      &:before
        display inline-block
        vertical-align top
        counter-increment section
        content counter(section)
        background-color white
        width 18px
        height 18px
        overflow hidden
        text-align center
        border-radius 50%
        font-size 10px
        line-height 19px
        margin-right 20px

        [data-theme="light"] &
          background-color rgba(black, 0.75)

      .Track
        display inline-block
        width calc(100% - 38px)

  section
    font-size 13px
    margin-top 42px
    padding 30px 6% 18px
    background-color rgba(black, 0.03)

    [data-theme="light"] &
      color rgba(black, 0.6)

    p
    ul
    ol
      margin 0 0 1em

    ul
    ol
      padding-left 1.3em
