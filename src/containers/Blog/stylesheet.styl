.Blog

  h1
    font-size 72px
    line-height 1.2
    margin 0 0 1em
    font-weight normal
    font-family TitleFont, sans-serif

    @media (orientation landscape)

      @media (max-width 1280px)
        font-size 54px

      @media (max-width 768px)
        font-size 42px
        margin-bottom 0.5em

    @media (orientation portrait)
      font-size 42px
      margin 0 0 0.5em

  .Main
    overflow hidden

    @media (orientation landscape)
      position fixed
      height 100vh
      left 0
      top 0

      img
        height 100vh
        width auto

    @media (orientation portrait)
      position relative
      left 0
      top 0

      img
        width 100%
        height auto

    img
      position relative
      left 50%
      transform translateX(-50%)
      user-select none
      pointer-events none

    .transitioner
      @media (orientation portrait)
        line-height 0

    blockquote
      position absolute
      bottom 24px
      right 20px
      margin 0
      z-index 2
      font-size 18px
      line-height 1
      letter-spacing 0.75px

      @media (orientation portrait)
        display none

      div
        &:empty
          display block
          float none
          background-color transparent !important
          box-shadow none
          height 0
          padding 0.5em 0 0

        @media (orientation landscape)
          float right
          clear both
          padding 0 0.4em
          line-height 1.5
          box-shadow 2px 3px 0 rgba(black, 0.12)
          background white

          [data-theme='light'] &
            background #222

        @media (orientation portrait)
          display inline

          &:after
            content ' '

  .Sidebar

    .fade
      height 30px
      bottom 30px

      @media (max-width 768px) and (orientation landscape)
        left 50%

    .BlogList
      @media (orientation landscape)
        margin-bottom 60px

    h1
      font-size 72px
      line-height 1.2
      margin 30% 6% 0.25em
      font-weight normal
      font-family TitleFont, sans-serif

      @media (orientation landscape)

        @media (max-width 1280px)
          font-size 54px

        @media (max-width 768px)
          font-size 42px
          margin-top 5%
          margin-bottom 0.5em

      @media (orientation portrait)
        font-size 42px
        margin 6% 6% 0.5em

  .pagination
    display block
    font-size 14px
    font-family BodyFont, sans-serif
    color white
    font-weight 700
    text-transform uppercase
    letter-spacing 1px
    position relative
    overflow hidden
    padding 0 3% 4%
    bottom 0
    right 0
    z-index 2

    @media (orientation landscape)
      width 40%
      padding 1% 1.4%
      position fixed

      @media (max-width 768px) and (orientation landscape)
        width 50%

    a
      display inline-block
      color inherit
      text-decoration none
      padding 2%
      text-shadow 1px 1px 0 rgba(black, 0.4)

      &:before
      &:after
        font-family 'danielle'
        display inline-block
        font-size inherit
        line-height inherit
        vertical-align middle

    .newer
      float left

      &:before
        content '\E007'

    .older
      float right

      &:after
        content '\E008'

  .opaqueFade
    display block
    position fixed
    bottom 0
    left 60%
    right 0
    height 30px

    @media (orientation portrait)
      display none

    @media (max-width 768px) and (orientation landscape)
      left 50%
