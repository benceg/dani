.HomePage

  h1
    font-size 52px
    font-family 'ChunkFive', sans-serif

  figure
    margin 0
    overflow hidden

    @media (orientation landscape)
      position fixed
      width 60vw
      height 100vh
      left 0
      top 0

  img
    height 100vh
    transform translateX(-25%)

  article

    @media (orientation landscape)
      position relative
      width 40vw
      min-height 100vh
      float right
