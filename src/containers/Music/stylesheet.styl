.Music

  .Main
    overflow hidden

    @media (orientation landscape)
      position fixed
      height 100vh
      left 0
      top 0

      img
        height 100vh

    @media (orientation portrait)
      position relative
      left 0
      top 0

      img
        width 100%

    img
      position relative
      left 50%
      transform translateX(-50%)
      user-select none
      pointer-events none

    blockquote
      position absolute
      top 20px
      left 0
      margin 0
      z-index 2
      font-size 16px
      line-height 1
      letter-spacing 0.75px

      div
        float left
        clear both
        padding 6px 10px
        box-shadow 2px 3px 0 rgba(black, 0.12)

  .Sidebar

    article
      padding-left 0
      padding-right 0
      margin-top 10%

    section
      margin 0 auto
      margin-top 60px

      > ul
        margin 0
        padding 0
        list-style none

    h2
      font-family 'ChunkFive', sans-serif
      font-size 48px
      margin 0 6% 0.75em

    .releases
      ul
        padding 0 6%
