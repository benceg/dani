.Post

  .Main

    @media (orientation landscape)
      width 70%

    .hero
      @media (orientation landscape)
        display none

    img
      max-width 100%

    article
      max-width 720px
      margin 6% auto
      padding 0 6%

      a
        color #222
        text-decoration underline

      h1
        font-family TitleFont, sans-serif
        font-size 56px
        text-align center
        margin 0 0 0.35em
        padding 0 0 0.35em
        border-bottom 1px solid rgba(black, 0.5)

      date
        display block
        text-align center
        font-size 13px
        margin 1em 0 3em

      .article
        font-size 14px
        line-height 1.5

        p
          margin 1.5em 0
          text-indent 1.5em

          &:first-of-type
            text-indent 0

          img:only-child
            margin-left -1.5em

      .comments
        margin-top 4em
        color #222

        a
          color #222

  .Sidebar

    img
      max-width 100%

    .sidebarHero
      @media (orientation portrait)
        display none

    @media (orientation landscape)
      width 30%

      .fade
        left 70%

      .BlogList
        margin-top 0

        .list
          padding-left 0

    @media (orientation portrait)
      margin-bottom 30px

    &.no-image .related
      margin-top 60%

    .related
      margin-top 6%

      h4
        font-family TitleFont, sans-serif
        font-size 20px
        margin 0 0 6%
        letter-spacing 0.5px
