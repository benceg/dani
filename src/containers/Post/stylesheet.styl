.Post

  .Main

    @media (orientation landscape)
      width 80%

    article
      max-width 600px
      margin 6% auto

      h1
        font-family 'ChunkFive', sans-serif
        font-size 56px
        text-align center
        margin 0 0 0.35em
        padding 0 0 0.35em
        border-bottom 1px solid rgba(black, 0.5)

      date
        display block
        text-align center
        font-size 13px
        margin 1em 0 3em

      .article
        font-size 14px
        line-height 1.5

        p
          margin 1.5em 0
          text-indent 1.5em

          &:first-of-type
            text-indent 0

      .comments
        margin-top 4em

  .Sidebar

    @media (orientation landscape)
      width 20%
