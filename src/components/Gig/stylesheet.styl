.Gig
  margin-left 6%
  display table-row
  width 100%
  text-decoration none
  position relative
  transition color 0.3s

  &:not(:hover):not(:focus)
    color white !important

  &:focus
    outline 0

  &:hover
  &:focus
    date
    .details
      &:before
        transform scale3d(1,1,1)

    date:before
      transition-duration 0.2s

  date
  .details
    display table-cell
    vertical-align middle
    padding 10px
    position relative

    > *
      position relative
      z-index 1

    &:before
      content ''
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      background white
      z-index 0
      transform scale3d(0,1,1)
      transition transform 0.3s

  date
    width 1%

    &:before
      transform-origin 100% 0
      transition-duration 0.34s

    span
      font-family 'ChunkFive', sans-serif
      letter-spacing 1px
      display block
      white-space nowrap

    .date
      font-size 14px

    .year
      font-size 20px

  .details

    &:before
      transform-origin 0 0

    h3
      font-size 15px
      font-weight 400
      margin 0

    .venue
      font-size 12px
      margin 0
