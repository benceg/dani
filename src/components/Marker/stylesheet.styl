.Marker
  display inline-block
  padding 10px
  text-align center
  white-space nowrap
  transform translateX(-50%)
  font-size 14px
  font-family 'Roboto', sans-serif
  margin-top 12px
  border-radius 2px

  &:before
    content ''
    display block
    width 16px
    height 16px
    transform rotate(45deg)
    background-color inherit
    position absolute
    top -8px
    left 50%
    margin-left -8px
