.Menu
  position fixed
  margin 0
  right 0
  z-index 1
  font-family TitleFont, sans-serif
  font-weight normal
  text-align right

  ul
    list-style none
    margin 0
    padding 0
    transition transform 0.3s

    &.open a
      transform translate3d(0,0,0)

  li
    text-transform lowercase
    white-space nowrap

  a
    position relative
    display inline-block
    font-size 18px
    line-height 1.333em
    color white
    text-decoration none
    padding 0 15px 0 8px
    transition color 0.2s, transform 0.2s
    margin 0.1em 0
    transform translate3d(100%,0,0)
    -webkit-tap-highlight-color transparent

    @media (orientation landscape)

      @media (max-width 768px)
        box-shadow -1px 1px 3px rgba(black, 0.1)

    [data-theme="light"] &
      color #222

    &:after
      content ''
      display block
      position absolute
      top 0
      right -24px
      bottom 0
      left 0
      background white
      transform translate3d(100%,0,0)
      transition color 0.2s, transform 0.2s
      z-index -1

      [data-theme="light"] &
        background #222

    &:not(.active):hover
    &:not(.active):focus
      color inherit

      &:after
        transform translate3d(0,0,0)

    &.active
      color inherit
      font-size 1.333em
      padding 3px 15px 3px 8px
      transform translate3d(0,0,0)

      &:after
        background white
        transform translate3d(-24px,0,0)

      [data-theme="light"] &
        &:after
          background #222 !important

      &:before
        content '\E003'
        font-family 'danielle'
        display inline-block
        font-size 0.8em
        line-height 1
        vertical-align middle
        position absolute
        left -16px
        top 50%
        margin-top -0.4em
        opacity 1
        transition opacity 0.2s

  ul.open

    a.active

      &:after
        transform translate3d(0,0,0)

      &:before
        opacity 0
