.Album
  display block
  position relative
  padding 0 6%
  margin 12px 0

  &:before
    content ''
    display block
    position absolute
    top 10px
    right 0
    bottom 10px
    left 6%
    background white
    z-index 0
    opacity 0
    transform-origin 0 0
    transform scale3d(0,1,1)
    transition transform 0.3s, opacity 0.3s

  &:hover:before
    opacity 1
    transform scale3d(1,1,1)

  &:hover

    .disc
      div
        opacity 0.2

      figure
        &:before
          transform translate3d(0,-30%,0)
        &:after
          opacity 1

        img
          transform rotateY(-55deg)

        .record
          transform translate3d(0,-40%,0)

    .details
      color #131313

      h3
        border-top 1px solid #131313

  a
    display block
    position relative

  .disc
    display inline-block
    color white
    position relative
    height 0
    top 0
    left 0
    vertical-align middle
    width 25%
    padding-top 25%
    border-radius 3px

    @media (orientation portrait)
      //

    @media (orientation landscape)

      @media (max-width 1024px)
        width 32%
        padding-top 32%

    figure
      display block
      margin 0
      padding 0
      position absolute
      top 0
      right -1px
      bottom -1px
      left 0
      z-index 1
      transition transform 0.2s
      transform-style preserve-3d
      backface-visibility hidden
      perspective 1000px

      &:after
        content ''
        display block
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background rgba(black, 0.1)
        transition opacity 0.3s
        opacity 0
        z-index 1
        transform translate3d(0,0,0)
        border-radius 3px

      img
        width 100%
        height 100%
        display block
        position absolute
        top 0
        left 0
        z-index 2
        pointer-events none
        backface-visibility hidden
        transform-origin 0 50%
        transition transform 0.2s
        border-radius 3px

      &:before
      .record
        position absolute
        top 2%
        left 2%
        width 96%
        height 96%
        border-radius 50%
        z-index 0
        pointer-events none
        transition transform 0.3s
        transform translate3d(0,0,0)

      &:before
        content ''
        background-color rgba(black, 0.05)
        transition transform 0.2s

      .record
        background-color #131313

      .record-label
        position absolute
        top 50%
        left 50%
        border-radius 50%
        background-color white
        width 46%
        height 46%
        margin -23% 0 0 -23%
        z-index 0

  .details
    display inline-block
    color white
    text-decoration none
    vertical-align middle
    padding 15px 10px 15px 32px
    transition color 0.3s

    date
    h3
      display block
      float left
      clear both

    date
      margin 0
      font-size 20px
      line-height 1
      font-weight 100

    h3
      margin 0.22em 0 0
      padding 0.2em 0 0
      font-size 28px
      line-height 1
      font-weight 100
      border-top 1px solid rgba(white, 0.175)
      transition border-color 0.3s
      letter-spacing 0.75px
      font-family 'ChunkFive', sans-serif

.Releases:hover
  .Album
    z-index 0

  .Album:hover
    z-index 1
